#------------------------------------------------------------
# wikisaufy_b ibay directories (wiki de saufy)
#------------------------------------------------------------

<Directory /home/e-smith/files/ibays/wikisaufy_b/html>
    Options None
    Options +Indexes
    Options +Includes
    AllowOverride None
    order deny,allow
    deny from all
    allow from all
    AuthName "wiki de saufy"
    AuthType Basic
    AuthExternal pwauth
    require user wikisaufy_b
    Satisfy all
</Directory>

<Directory /home/e-smith/files/ibays/wikisaufy_b/cgi-bin>
    Options ExecCGI
    AllowOverride None
    order deny,allow
    deny from all
    allow from all
    AuthName "wiki de saufy"
    AuthType Basic
    AuthExternal pwauth
    require user wikisaufy_b
    Satisfy all
</Directory>

<Directory /home/e-smith/files/ibays/wikisaufy_b/files>
    AllowOverride None
    order deny,allow
    deny from all
    allow from all
    AuthName "wiki de saufy"
    AuthType Basic
    AuthExternal pwauth
    require user wikisaufy_b
    Satisfy all
</Directory>


<Directory /home/e-smith/files/ibays/wikisaufy_b/html>
    AddType application/x-httpd-php .php .php3 .phtml
    AddType application/x-httpd-php-source .phps
    php_admin_value open_basedir /home/e-smith/files/ibays/wikisaufy_b/
</Directory>
