<VirtualHost 0.0.0.0:80>

    ServerName server.local
    ServerAlias ftp.server.local mail.server.local proxy.server.local serveur.server.local wpad.server.local www.server.local

    DocumentRoot         /home/e-smith/files/ibays/Primary/html
    ScriptAlias /cgi-bin /home/e-smith/files/ibays/Primary/cgi-bin
    Alias       /files   /home/e-smith/files/ibays/Primary/files

    # depot_b ibay (echange des fichiers)

    ScriptAlias /depot_b/cgi-bin /home/e-smith/files/ibays/depot_b/cgi-bin
    Alias       /depot_b/files   /home/e-smith/files/ibays/depot_b/files
    Alias       /depot_b        /home/e-smith/files/ibays/depot_b/html

    # potos_b ibay (ibay d'echange avec les amis)

    ScriptAlias /potos_b/cgi-bin /home/e-smith/files/ibays/potos_b/cgi-bin
    Alias       /potos_b/files   /home/e-smith/files/ibays/potos_b/files
    Alias       /potos_b        /home/e-smith/files/ibays/potos_b/html

    # wikigames_b ibay (Wiki de jeux)

    ScriptAlias /wikigames_b/cgi-bin /home/e-smith/files/ibays/wikigames_b/cgi-bin
    Alias       /wikigames_b/files   /home/e-smith/files/ibays/wikigames_b/files
    Alias       /wikigames_b        /home/e-smith/files/ibays/wikigames_b/html

    # wikilocal_b ibay (wiki du lan)

    ScriptAlias /wikilocal_b/cgi-bin /home/e-smith/files/ibays/wikilocal_b/cgi-bin
    Alias       /wikilocal_b/files   /home/e-smith/files/ibays/wikilocal_b/files
    Alias       /wikilocal_b        /home/e-smith/files/ibays/wikilocal_b/html

    # wikimuzo_b ibay (wiki de muzo)

    ScriptAlias /wikimuzo_b/cgi-bin /home/e-smith/files/ibays/wikimuzo_b/cgi-bin
    Alias       /wikimuzo_b/files   /home/e-smith/files/ibays/wikimuzo_b/files
    Alias       /wikimuzo_b        /home/e-smith/files/ibays/wikimuzo_b/html

    # wikisaufy_b ibay (wiki de saufy)

    ScriptAlias /wikisaufy_b/cgi-bin /home/e-smith/files/ibays/wikisaufy_b/cgi-bin
    Alias       /wikisaufy_b/files   /home/e-smith/files/ibays/wikisaufy_b/files
    Alias       /wikisaufy_b        /home/e-smith/files/ibays/wikisaufy_b/html

    # skipping SSL directives

    RewriteEngine on
    RewriteCond %{REQUEST_METHOD} ^(TRACE|TRACK)
    RewriteRule .* - [F]


    RewriteRule ^/server-manager(/.*|$)    https://%{HTTP_HOST}/server-manager$1 [L,R]
    <Location /server-manager>
        order deny,allow
        deny from all
        allow from 127.0.0.1 192.168.66.0/255.255.255.0
    </Location>
    RewriteRule ^/server-common(/.*|$)    https://%{HTTP_HOST}/server-common$1 [L,R]
    <Location /server-common>
        order deny,allow
        deny from all
        allow from 127.0.0.1 192.168.66.0/255.255.255.0
    </Location>
    RewriteRule ^/user-password(/.*|$)    https://%{HTTP_HOST}/user-password$1 [L,R]
    <Location /user-password>
        order deny,allow
        deny from all
        allow from 127.0.0.1 192.168.66.0/255.255.255.0
    </Location>

    # webmail is disabled in this VirtualHost
    # alias for Apache icons
    Alias /icons/ /var/www/icons/

    # Alias for server resources
    Alias /server-resources /home/e-smith/files/server-resources/

</VirtualHost>


<VirtualHost 0.0.0.0:443>

    ServerName server.local
    ServerAlias ftp.server.local mail.server.local proxy.server.local serveur.server.local wpad.server.local www.server.local

    DocumentRoot         /home/e-smith/files/ibays/Primary/html
    ScriptAlias /cgi-bin /home/e-smith/files/ibays/Primary/cgi-bin
    Alias       /files   /home/e-smith/files/ibays/Primary/files

    # depot_b ibay (echange des fichiers)

    ScriptAlias /depot_b/cgi-bin /home/e-smith/files/ibays/depot_b/cgi-bin
